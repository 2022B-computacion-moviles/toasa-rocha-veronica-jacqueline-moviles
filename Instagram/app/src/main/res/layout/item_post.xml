<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorFontWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/profile_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/rubik_medium"
            android:text="UsuarioInstagram"
            android:textColor="@color/colorFontBlack"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="261dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="412dp"
            android:layout_height="293dp"
            android:background="@color/colorFontWhite"
            android:src="@drawable/imagen" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/post_img_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/colorFontWhite"
            app:srcCompat="@drawable/ic_favorite" />


        <TextView
            android:id="@+id/post_txtv_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/post_img_like"
            android:fontFamily="@font/rubik_medium"
            android:textColor="#838387"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/post_img_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1.5dp"
            android:layout_toEndOf="@+id/post_txtv_likes"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/post_txtv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/post_img_comment"
            android:fontFamily="@font/rubik_medium"
            android:text="20 Comments"
            android:textColor="#838387"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/post_img_save"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:src="@drawable/ic_savee" />


    </RelativeLayout>

    <TextView
        android:id="@+id/post_username_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/rubik_medium"
        android:text="lorem ipsum dolor "
        android:textColor="@color/colorFontBlack" />

    <TextView
        android:id="@+id/post_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/rubik_regular"
        android:text="lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliquaâ€ "
        android:textColor="@color/colorFontBlack" />

</LinearLayout>
